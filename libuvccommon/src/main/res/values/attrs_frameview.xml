<resources>
	<declare-styleable name="FrameView">
		<!-- フレームの種類 -->
		<attr name="frame_type" default="frame_type_frame">
			<enum name="frame_type_none" value="0" />
			<enum name="frame_type_frame" value="1" />
			<enum name="frame_type_cross_full" value="2" />
			<enum name="frame_type_cross_quarter" value="3" />
			<enum name="frame_type_circle" value="4" />
			<enum name="frame_type_cross_circle" value="5" />
			<enum name="frame_type_circle2" value="6" />
			<enum name="frame_type_cross_circle2" value="7" />
		</attr>
		<!-- 外枠の線幅 -->
		<attr name="frame_width" format="dimension" default="3dp" />
		<!-- 外枠の色 -->
		<attr name="frame_color" format="reference|color|integer" default="#ffb1b1b1" />
		<!-- スケールの種類 -->
		<attr name="scale_type" default="scale_none" >
			<enum name="scale_none" value="0" />
			<enum name="scale_inch" value="1" />
			<enum name="scale_mm" value="2" />
		</attr>
		<!-- スケールの描画幅 -->
		<attr name="scale_width" format="dimension" default="3dp" />
		<!-- スケールの色 -->
		<attr name="scale_color" format="reference|color|integer" default="#ffb1b1b1" />
		<!-- スケールの回転角 -->
		<attr name="scale_rotation" format="float" default="0" />
		<!-- スケールの拡大縮小率 -->
		<attr name="scale_scale" format="float" default="1" />
		<!-- 目盛りの色 -->
		<attr name="tick_color" format="reference|color|integer" default="#ffb1b1b1" />
	</declare-styleable>
</resources>